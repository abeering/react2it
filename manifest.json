{
  "name": "react2it",
  "description": "Quickly record reaction gifs through your webcam.",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "commands": {
    "take-react2it": {
      "suggested_key": {
        "default": "Ctrl+Y",
        "mac": "Command+Y" 
      },
      "description": "Create a reactigif."
    }
  },
  "icons": { "128": "icons/icon-128.png", "16": "icons/icon-16.png" },
  "permissions": [ "videoCapture", "clipboardWrite" ]
}
